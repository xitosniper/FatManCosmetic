<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/cart_items_image"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/son_li" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cart_items_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:maxLength="30"
                android:text="Son Kem Lì Merzy Velvet Tint Season 3"
                android:textColor="#717171"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="left"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|bottom"
                    android:orientation="horizontal">

<!--                    <ImageView-->
<!--                        android:id="@+id/cart_items_descrease"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:src="@drawable/icon_remove" />-->

<!--                    <TextView-->
<!--                        android:id="@+id/cart_items_quantity"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_margin="5dp"-->
<!--                        android:gravity="center"-->
<!--                        android:text="2"-->
<!--                        android:textSize="15dp" />-->

<!--                    <ImageView-->
<!--                        android:id="@+id/cart_items_increase"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:src="@drawable/icon_add" />-->
                        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                            android:id="@+id/number_button"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:background="@color/colorAccent"
                            app:initialNumber="1"
                            app:finalNumber="20">
                        </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/cart_items_price"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="start|center"
                android:layout_marginLeft="5dp"
                android:text="129,0000đ"
                android:textColor="#FF0000" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>