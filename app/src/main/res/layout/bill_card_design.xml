<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginLeft="6dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/bill_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/bill_number"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:fontFamily="@font/baloo"
            android:maxLength="30"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:text="Hóa đơn số: "
            android:textColor="#717171"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_code_bill"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:maxLength="30"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:text="Mã hóa đơn: "
                android:textColor="#717171"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/bill_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:maxLength="30"
                android:text="Bill title"
                android:textColor="#717171"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_date_bill"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:maxLength="30"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:text="Ngày lập hóa đơn: "
                android:textColor="#717171"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/date_bill"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:maxLength="30"
                android:text="Ngay thang nam"
                android:textColor="#717171"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>